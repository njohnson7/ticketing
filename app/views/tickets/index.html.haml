%h2 Tickets
%table.table.table-dark
  %thead
    %tr
      %th Name
      %th Assignee
      %th Status
      %th Tags
      %th
  %tbody
    - @tickets.each do |ticket|
      %tr
        %td= link_to ticket.name, ticket_path(ticket)
        %td USER_NAME
        %td= ticket.status
        %td TAG1, TAG2
        %td
          = link_to 'Edit', edit_ticket_path(ticket)
          = link_to 'Delete', ticket_path(ticket), method: :delete
.mt-4= link_to 'New Ticket', new_ticket_path
